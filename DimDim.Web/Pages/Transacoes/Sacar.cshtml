@page "{id:int?}"
@model DimDim.Web.Pages.Transacoes.SacarModel

@{
    ViewData["Title"] = "Saque";
}

<section class="page-header container">
    <h1>Saque em Conta</h1>
</section>

<div class="container">
    <div class="card padded">
        @if (TempData["Success"] is string ok && !string.IsNullOrWhiteSpace(ok))
        {
            <div class="alert alert-success border-2 border-dark" role="alert">@ok</div>
        }

        <form method="post" class="d-flex flex-column gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row">
                <label asp-for="IdConta">ID da Conta</label>
                <input asp-for="IdConta" class="form-control" type="number" min="1" step="1" />
                <span asp-validation-for="IdConta" class="text-danger"></span>
            </div>

            <div class="form-row">
                <label asp-for="Valor">Valor</label>
                <input asp-for="Valor" class="form-control" type="number" step="0.01" min="0.01" inputmode="decimal" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="form-actions d-flex justify-content-end gap-2">
                <a class="btn btn-outline-dark" asp-page="/Transacoes/Index" asp-route-IdConta="@Model.IdConta">Voltar ao Extrato</a>
                <button type="submit" class="btn btn-dark">Sacar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}