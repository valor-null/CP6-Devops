@page "{idConta?}"
@model DimDim.Web.Pages.Transacoes.DepositarModel
@{
    ViewData["Title"] = "Depósito";
}

<section class="page-header container">
    <h1>Depósito</h1>
    <a asp-page="/Transacoes/Index" asp-route-idConta="@Model.Form.IdConta" class="btn-ghost">
        <i class="bi bi-arrow-left me-1"></i>Voltar
    </a>
</section>

<div class="container">
    <div class="form-card">
        <form method="post" class="d-flex flex-column gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row">
                <label asp-for="Form.IdConta"></label>
                <input asp-for="Form.IdConta" />
            </div>
            <span asp-validation-for="Form.IdConta" class="text-danger"></span>

            <div class="form-row">
                <label asp-for="Form.Valor"></label>
                <input asp-for="Form.Valor" type="number" step="0.01" />
            </div>
            <span asp-validation-for="Form.Valor" class="text-danger"></span>

            <div class="form-actions">
                <a asp-page="/Transacoes/Index" asp-route-idConta="@Model.Form.IdConta" class="btn-ghost">
                    <i class="bi bi-x-lg me-1"></i>Cancelar
                </a>
                <button type="submit" class="btn btn-dark">
                    <i class="bi bi-check2-circle me-1"></i>Confirmar depósito
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}