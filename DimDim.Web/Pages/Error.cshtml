@page
@model DimDim.Web.Pages.ErrorModel
@{
    ViewData["Title"] = "Erro";
}
<section class="title">Ocorreu um erro</section>
<section class="card" style="display:flex;flex-direction:column;gap:12px;">
    <p>Algo inesperado aconteceu.</p>
    @if (Model.ShowRequestId)
    {
        <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
    }
    <div style="display:flex;gap:12px;justify-content:flex-end;">
        <a asp-page="/Index" style="padding:10px 16px;border:2px solid var(--accent);border-radius:12px;background:#fff;font-weight:700;text-decoration:none;color:#111;">Voltar ao início</a>
    </div>
</section>