@page
@model DimDim.Web.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Clientes";
}
<section class="page-header container">
    <h1>Clientes</h1>
    <a asp-page="/Clientes/Create" class="btn btn-dark"><i class="bi bi-plus-lg me-1"></i>Novo Cliente</a>
</section>

<div class="container">
    <div class="card padded">
        <div class="table-responsive">
            <table class="table table-clientes">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>Email</th>
                        <th class="text-end">Cadastrado em</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Clientes != null && Model.Clientes.Count > 0)
                {
                    foreach (var c in Model.Clientes)
                    {
                        <tr>
                            <td class="align-middle">@c.Nome</td>
                            <td class="align-middle text-center font-mono">@c.CPF</td>
                            <td class="align-middle">@c.Email</td>
                            <td class="align-middle text-end">@c.DataCadastro.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="align-middle">
                                <div class="btn-iconbar">
                                    <a class="btn-ghost-sm" asp-page="/Clientes/Edit" asp-route-id="@c.IdCliente" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a class="btn-ghost-sm" asp-page="/Clientes/Delete" asp-route-id="@c.IdCliente" title="Excluir">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    for (int i = 0; i < 5; i++)
                    {
                        <tr><td colspan="5"><div class="skeleton"></div></td></tr>
                    }
                    <tr><td colspan="5">Sem clientes cadastrados ainda.</td></tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
