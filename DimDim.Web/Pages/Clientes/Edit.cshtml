@page "{id:int}"
@model DimDim.Web.Pages.Clientes.EditModel
@{
    ViewData["Title"] = "Editar Cliente";
}
<section class="page-header container">
    <h1>Editar Cliente</h1>
    <a asp-page="/Clientes/Index" class="btn-ghost"><i class="bi bi-arrow-left me-1"></i>Voltar</a>
</section>

<div class="container">
    <div class="form-card">
        <form method="post" class="d-flex flex-column gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row">
                <label asp-for="Form.Nome">Nome</label>
                <input asp-for="Form.Nome" />
            </div>
            <span asp-validation-for="Form.Nome" class="text-danger"></span>

            <div class="form-row">
                <label asp-for="Form.Email">Email</label>
                <input asp-for="Form.Email" />
            </div>
            <span asp-validation-for="Form.Email" class="text-danger"></span>

            <div class="form-row">
                <label asp-for="Form.CPF">CPF</label>
                <input asp-for="Form.CPF" readonly class="font-mono" />
            </div>

            <div class="form-actions">
                <a asp-page="/Clientes/Index" class="btn-ghost"><i class="bi bi-x-lg me-1"></i>Cancelar</a>
                <button type="submit" class="btn btn-dark"><i class="bi bi-save me-1"></i>Salvar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}