@page
@model DimDim.Web.Pages.Contas.CreateModel
@{
    ViewData["Title"] = "Nova Conta";
}
<section class="page-header container">
    <h1>Nova Conta</h1>
    <a asp-page="/Contas/Index" class="btn btn-outline-dark"><i class="bi bi-arrow-left me-1"></i>Voltar</a>
</section>

<div class="container">
    <div class="form-card">
        <form method="post" class="d-flex flex-column gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row">
                <label asp-for="Form.IdCliente">Cliente</label>
                <select asp-for="Form.IdCliente">
                    <option value="">Selecione...</option>
                    @foreach (var c in Model.Clientes)
                    {
                        <option value="@c.IdCliente">@c.IdCliente - @c.Nome</option>
                    }
                </select>
            </div>
            <span asp-validation-for="Form.IdCliente" class="text-danger"></span>

            <div class="form-row">
                <label asp-for="Form.NumeroConta">Número da Conta</label>
                <input asp-for="Form.NumeroConta" />
            </div>
            <span asp-validation-for="Form.NumeroConta" class="text-danger"></span>

            <div class="form-row">
                <label asp-for="Form.TipoConta">Tipo</label>
                <select asp-for="Form.TipoConta">
                    <option value="Corrente">Corrente</option>
                    <option value="Poupanca">Poupanca</option>
                </select>
            </div>
            <span asp-validation-for="Form.TipoConta" class="text-danger"></span>

            <div class="form-actions">
                <a asp-page="/Contas/Index" class="btn btn-outline-dark"><i class="bi bi-x-lg me-1"></i>Cancelar</a>
                <button type="submit" class="btn btn-dark"><i class="bi bi-save me-1"></i>Salvar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="/Pages/Shared/_ValidationScriptsPartial.cshtml" />
}
