@page
@model DimDim.Web.Pages.Contas.IndexModel
@{
    ViewData["Title"] = "Contas";
}
<section class="page-header container">
    <h1>Contas</h1>
    <a asp-page="/Contas/Create" class="btn btn-dark"><i class="bi bi-plus-lg me-1"></i>Nova Conta</a>
</section>

<div class="container">
    <div class="card padded">
        <div class="table-responsive">
            <table class="table table-contas">
                <thead>
                    <tr>
                        <th>Número</th>
                        <th>Tipo</th>
                        <th class="text-end">Saldo</th>
                        <th class="text-center">Cliente (Id)</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Contas != null && Model.Contas.Count > 0)
                {
                    foreach (var c in Model.Contas)
                    {
                        <tr>
                            <td class="align-middle">@c.NumeroConta</td>
                            <td class="align-middle">@c.TipoConta</td>
                            <td class="align-middle text-end">@c.Saldo.ToString("N2")</td>
                            <td class="align-middle text-center font-mono">@c.IdCliente</td>
                            <td class="align-middle">
                                <div class="btn-iconbar">
                                    <a class="btn-ghost-sm" asp-page="/Contas/Edit" asp-route-id="@c.IdConta" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a class="btn-ghost-sm" asp-page="/Contas/Delete" asp-route-id="@c.IdConta" title="Excluir">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    for (int i = 0; i < 5; i++)
                    {
                        <tr><td colspan="5"><div class="skeleton"></div></td></tr>
                    }
                    <tr><td colspan="5">Sem contas cadastradas ainda.</td></tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
