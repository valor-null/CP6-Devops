@page
@model DimDim.Web.Pages.Contas.IndexModel
@{
    ViewData["Title"] = "Contas";
}
<section class="title">Lista de Contas</section>
<section class="card">
    <div style="display:flex;justify-content:flex-end;margin-bottom:16px;">
        <a asp-page="/Contas/Create" style="padding:10px 16px;border:2px solid var(--accent);border-radius:12px;background:#fff;font-weight:700;text-decoration:none;color:#111;">Nova Conta</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th class="th">Número</th>
            <th class="th">Tipo</th>
            <th class="th">Saldo</th>
            <th class="th">Cliente</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Contas != null && Model.Contas.Count > 0)
        {
            foreach (var c in Model.Contas)
            {
                <tr class="tr">
                    <td class="td">@c.NumeroConta</td>
                    <td class="td">@c.TipoConta</td>
                    <td class="td">@c.Saldo.ToString("N2")</td>
                    <td class="td">@c.IdCliente</td>
                </tr>
            }
        }
        else
        {
            for (int i = 0; i < 5; i++)
            {
                <tr><td class="td" colspan="4"><div class="skeleton"></div></td></tr>
            }
            <tr><td class="td" colspan="4">Sem contas cadastradas ainda.</td></tr>
        }
        </tbody>
    </table>
</section>