@page
@model DimDim.Web.Pages.Status.IndexModel
@{
    ViewData["Title"] = "Status";
    var apiUp = (Model.ApiStatus ?? "").Trim().ToUpperInvariant();
    var apiOk = apiUp == "OK" || apiUp == "UP";
    var dbUp = (Model.DbStatus ?? "").Trim().ToUpperInvariant();
    var dbOk = dbUp == "OK" || dbUp == "UP";
    var time = Model.Time ?? DateTime.Now;
}
<section class="page-header container">
    <h1>Status do Sistema</h1>
</section>

<div class="container">
    <div class="row g-3">
        <div class="col-md-6">
            <div class="card padded">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-semibold">API</span>
                    <span class="badge rounded-pill px-3 py-2 @(apiOk ? "bg-success" : "bg-danger")">@Model.ApiStatus</span>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card padded">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-semibold">Banco de Dados</span>
                    <span class="badge rounded-pill px-3 py-2 @(dbOk ? "bg-success" : "bg-danger")">@Model.DbStatus</span>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="text-muted">Atualizado em: @time.ToString("dd/MM/yyyy HH:mm:ss")</div>
        <form method="get">
            <button type="submit" class="btn btn-outline-dark">Recarregar</button>
        </form>
    </div>
</div>